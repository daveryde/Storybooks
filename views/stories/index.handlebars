<h1>Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{#if user}}
                {{{editIcon user.id ../user.id id}}}
                {{/if}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p class="story-text">{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}">
                    <a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
                </div>
            </div>
            <div>
                <div class="card-action center-align">
                    <a class="btn grey waves-effect waves-light" href="/stories/show/{{id}}"><i class="medium material-icons left">more</i>
                        Read More</a>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <p>No Stories Found</p>
    {{/each}}
</div>